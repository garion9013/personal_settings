#!/bin/bash

# Arguments
# 1: attach / new
# 2: session number

sessid=false
ext=false
com=$1
while [ $# -gt 0 ]; do
  case "$2" in
    -h|--help)
      echo "tmux-command [attach/new] [options]"
      echo "options:"
      echo "-h, --help        show this messages"
      echo "-t, --titan       command to Titan Server or not"
      echo "-s, --sess=NUM    session number for attach"
      exit 0
      break;;
    --sess*)
      export sessid=`echo $2 | sed -e 's/^[^=]*=//g'`; shift ; break;;
    -s)
      shift
      if test $# -gt 0; then
        export sessid=`echo $2 | sed -e 's/^[^=]*=//g'`
      else
        echo "No session id specified !"
      fi
      shift
      break;;
    -t|--target)
      shift
      if test $# -gt 0; then
        ext=true
        target=$2
        if [[ -z "$2" ]]; then
          echo "ERROR: Specify target connection!"
          exit
        fi
      fi
      shift ; break;;
    *) break ;;
  esac
done

myip=`curl -s myip.dnsomatic.com`
SSH_HOME=younghwan@$myip
echo "Address of my computer: $SSH_HOME"
if $sessid; then
  echo $sessid
  COM="tmux -CC $com -t $2"
else
  COM="tmux -CC $com"
fi

if [[ $myip =~ ^147\.4[67]\.[0-9]{1,3}\.[0-9]{1,3}$ ]]; then
  echo "Local connection!"
  if $ext; then
    ssh -t $target "$COM"
  else
    ssh -t linux "$COM"
  fi
else
  echo "External connection!"
  if $ext; then
    ssh -t linux "ssh -t $target '$COM'"
  else
    ssh -t server "ssh -t yhlinux '$COM'"
  fi
fi
